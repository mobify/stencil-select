<div class="c-select {class}">
    {?element}
        {element|s}
    {:else}
        {?label}
            <label class="c-select__label">{label}</label>
        {/label}
        <span class="c-select__value"></span>
        <select id="{id}" name="{name}" {?disabled}disabled{/disabled} {?required}required{/required}>
            {body}
        </select>
    {/element}
</div>
